<h1><%= @tool.name %> <span class="badge"><%= @tool.tool_type.name %></span></h1>

<!--<div class="proj_area">
  <strong>Owner:</strong><br/>
  <%#= @project.owner %>
</div>-->

<div class="detail_description">
  <%= @tool.description %>
</div>

<% unless @tool.projects.empty? %>
    <h2>Related Projects</h2>
    <% @tool.projects.each do |project| %>
      <h3><%= link_to project.name, project_path(project) %></h3>
      <p><%=project.description[0..200] + "..." %></p>
    <% end %>
<% end %>

<span class="b_span">
	<%= link_to 'Edit Tool', edit_tool_path(@tool) %>
</span>
