<div class="row">
    <% @tools.each do |tool| %>
      <div class="col-xs-4">
        <h2><%= link_to tool.name, tool %></h2>
        <p class="lead"><%= tool.description[0..300] + '...' %></p>
        <div id="sk_ac">
            <div><%= link_to 'Edit', edit_tool_path(tool) %></div>
            <div><%= link_to 'Destroy', tool, method: :delete, data: { confirm: 'Are you sure?' } %></div>
        </div>
      </div>
    <% end %>
</div>

<span class="b_span">
	<%= link_to 'add another tool', new_tool_path %>
</span>