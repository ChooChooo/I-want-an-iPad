<div id="search">
	<div id="inner_search">
		<%= form_tag(search_path, :method => :post, :id => 'search-form') do %>
	
			<input name="search_params" id="search_term" type="text" autofocus="autofocus" />
			
			<span class="b_span">
				<%= submit_tag "GO" %>
	  		</span>
			
		<% end %>
	</div>
</div>

<div id="results"><%= render partial: "home/search_results"%></div>