<%= form_for(@project) do |f| %>
  <% if @project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
      <% @project.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div id="project_details">
	  <div class="field">
	    <%= f.label :project_name, 'Project Name:' %><br>
	    <%= f.text_field :name, :class => "form-control" %>
	  </div>
    <div class="field">
      <%= f.label :project_type_id, 'Project Id:' %><br>
      <%= f.collection_select :project_type_id, ProjectType.all, :id, :name, {prompt: true}, {class: "form-control"} %>
    </div>
	  <div class="field">
	    <%= f.label :project_description, 'Project Description:' %><br>
	    <%= f.text_area :description, :class => "form-control", :rows => "10" %>
	  </div>
  </div>
  
  <div id="project_tools" class="field">
    Tools:
		<div id="tools_list"><%= render 'shared/tools_list' %></div>
		<div id="new_tool"><%= render 'shared/tools_adder', :f => f %></div>
  </div>
  	
  <div class="b_span">
    <%= f.submit %>
  </div>
<% end %>
