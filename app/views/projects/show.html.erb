<h1><%= @project.name %> <span class="badge"><%= @project.project_type.name %></span></h1>
<%#= @project.owner %>

<span class="btn btn-default">
	<%= link_to 'Edit Project', edit_project_path(@project) %>
</span>

<div class="detail_description">
  <%= @project.description %>
</div>

<% unless @project.projects_tools.empty? %>
  <h2>Tools used to build this <%= link_to @project.project_type.name, project_type_path(@project.project_type) %></h2>
  <% @project.projects_tools.each do |project_tool| %>
    <h3><%= link_to project_tool.tool.name, tool_path(project_tool.tool) %></h3>
    <p><%= project_tool.notes %></p>
  <% end %>
<% end %>