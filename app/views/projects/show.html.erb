<div class="detail_description">
  <%= @project.description %>
</div>

<h2>Tools used to build this <%= link_to @project.project_type.name, project_type_path(@project.project_type) %></h2>
<div class="proj_area tools">
  	<% unless @project.projects_tools.empty? %>
      <ul class="project_tools">
          <% @project.projects_tools.each do |project_tool| %>
            <li class="project_tool"> <%= link_to project_tool.tool.name, tool_path(project_tool.tool) %><br/><%= project_tool.notes %> <br/><br/></li>
          <% end %>
      </ul>
	<% end %>
</div>
