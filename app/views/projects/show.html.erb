<p id="notice"><%= notice %></p>

<div class="proj_area">
  <strong>Name:</strong><br/>
  <%= @project.name %>
</div>

<!--<div class="proj_area">
  <strong>Owner:</strong><br/>
  <%#= @project.owner %>
</div>-->

<div class="proj_area">
  <strong>Description:</strong><br/>
  <%=@project.description[0..100] + "..." %>
</div>

<div class="proj_area tools">
  <strong>Tools used on this project:</strong>
  	<% unless @tool_list.empty? %>
	  <% @tool_list.each do |tool| %>
	  	<ul>
	  		<li><%= link_to tool, tool_detail_path(tool) %></li>
	  	</ul>
	  <% end %>
	<% end %>
</div>
