<div class="proj_description">
  <%= @project.description %>
</div>

<h2>Tools used to build this <%= @project.project_type.name %></h2>
<div class="proj_area tools">
  	<% unless @project.tools.empty? %>
      <ul class="project_tools">
          <% @project.tools.each do |tool| %>
            <li class="project_tool"><%= link_to tool.name, tool_detail_path(tool.name) %></li>
          <% end %>
      </ul>
	<% end %>
</div>