<%= stylesheet_link_tag "login" %>

<div class="container">
  <div class="row vertical-center-row">
    <div class="col-lg-12">
      <div class="row ">
        <div class="col-xs-4 col-xs-offset-4">

          <h1>Sign Up</h1>

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class:"well"}) do |f| %>
            <%= devise_error_messages! %>

            <div class="field"><%= f.label :email, "Email:" %><br />
            <%= f.email_field :email, autofocus: true, class: "form-control" %></div>

              <div class="field"><%= f.label :username, "Username:" %><br />
             <%= f.text_field :username, class: "form-control" %></div>

            <div class="field"><%= f.label :password, "Password:" %> <% if @validatable %><i>(<%= @minimum_password_length %> characters minimum)</i><% end %><br />
              <%= f.password_field :password, autocomplete: "off", class:"form-control" %></div>

            <div class="field"><%= f.label :password_confirmation %><br />
              <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %></div>

            <div class="line-up"><%= f.submit "Sign up", class:"btn btn-primary btn-lg" %></div>
            <div class="line-up"><%= render "devise/shared/links" %></div>
          <% end %>


        </div>
      </div>
    </div>
  </div>
</div>
