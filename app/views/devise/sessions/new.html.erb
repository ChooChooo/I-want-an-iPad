<%= stylesheet_link_tag "login" %>

<div class="container">
  <div class="row vertical-center-row">
    <div class="col-lg-12">
      <div class="row ">
        <div class="col-xs-4 col-xs-offset-4">
          <h1>Login</h1>

          <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "well"}) do |f| %>
            <div class="field"><%= f.label :login, "Username: " %><br />
              <%= f.text_field :login, {class: "form-control"} %></div>

            <div class="field"><%= f.label :password, "Password: " %><br />
              <%= f.password_field :password, autocomplete: "off", class:"form-control" %></div>

            <% if devise_mapping.rememberable? -%>
              <div class="field"><%= f.check_box :remember_me %> <%= f.label :remember_me, "Remember Me" %></div>
            <% end -%>

            <div class="line-up"><%= f.submit "Login", class: "btn btn-primary btn-lg" %></div>
            <div class="line-up"><%= render "devise/shared/links" %></div>
          <% end %>
        </div>

      </div>
    </div>
  </div>
</div>
